@model WebApplication3.Models.RegisterRequest
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Регистрация</h5>
                    <form asp-action="RegisterUser" enctype="multipart/form-data" method="post">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username, "Логин", new {@class = "control-label"})
                            <input asp-for="Username" class="form-control" type="text" id="inputUsername" placeholder="Введите логин" required />
                            @Html.ValidationMessageFor(m => m.Username, "",new {@class = "text-danger"})
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, "Почта", new {@class = "control-label"})
                            @Html.TextBoxFor(m => m.Email, "", new {@class= " form-control", required = true, id = "inputEmail",  placeholder ="Введите почту"})
                            @Html.ValidationMessageFor(m => m.Email, "",new {@class = "text-danger"})
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, "Пароль", new {@class = "control-label"})
                            @Html.PasswordFor(m => m.Password, new {id = "inputPassword", @class = "form-control", required = true, placeholder = "Введите пароль"})
                            @Html.ValidationMessageFor(m => m.Password, "",new {@class = "text-danger"})
                        </div>

                            <button class="btn w-100 btn-outline-primary btn-block text-uppercase mt-2" type="submit">Зарегистрироваться</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
